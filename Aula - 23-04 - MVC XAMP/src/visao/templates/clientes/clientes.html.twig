{% extends "base.html.twig" %}

{% block header %}
{{ parent() }}
<h1>Clientes</h1>
{% endblock header %}

{% block main %}
{% if dados is empty %}
<p>Nenhum dado encontrado.</p>
{% else %}
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Data de Nascimento</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {% for registro in dados %}
        <tr>
            <td>{{registro.codigo}}</td>
            <td>{{ registro.nome }}</td>
            <td>{{ registro.cpf }}</td>
            <td>{{ registro.dt_nascimento }}</td>
            <td>
                <form action="{{ home }}/clientes/digitar/{{registro.codigo}}" method="post">
                    <input type="hidden" name="id" value="{{ registro.codigo }}">
                    <button type="submit">Editar</button>
                </form>
                <form action="{{ home }}/clientes/excluir/{{registro.codigo}}" method="post">
                    <input type="hidden" name="id" value="{{ registro.codigo }}">
                    <button type="submit">Excluir</button>
                </form>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endif %}
{% endblock main %}

