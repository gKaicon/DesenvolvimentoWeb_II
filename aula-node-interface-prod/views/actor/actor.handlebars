<div class="container my-4">
    <h1 class="mb-4">Actors</h1>

    <form action="/actor/{{#if action }}update{{else}}create{{/if}}" method="post" class="mb-5">
        <input type="hidden" name="id" value="{{actor_editing.id}}">
        <div class="mb-3">
            <label for="first_name" class="form-label">First Name</label>
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1">ðŸ‘¤</span>
                <input type="text" class="form-control" id="first_name" name="first_name"
                    value="{{actor_editing.first_name}}" required>
            </div>
        </div>

        <div class="mb-3">
            <label for="last_name" class="form-label">Last Name</label>
            <div class="input-group">
                <span class="input-group-text" id="basic-addon2">ðŸ‘¥</span>
                <input type="text" class="form-control" id="last_name" name="last_name"
                    value="{{actor_editing.last_name}}" required>
            </div>
        </div>

        <div class="mb-3">
            <label for="birthDate" class="form-label">Birth Date</label>
            <div class="input-group">
                <span class="input-group-text" id="basic-addon3">ðŸŽ‚</span>
                <input type="date" class="form-control" id="birthDate" name="birthDate"
                    value="{{actor_editing.birthDate}}" required>
            </div>
        </div>

        <div class="mb-3">
            <label for="phoneNumber" class="form-label">Phone Number</label>
            <div class="input-group">
                <span class="input-group-text" id="basic-addon4">ðŸ“ž</span>
                <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber"
                    value="{{actor_editing.phoneNumber}}" required>
            </div>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <div class="input-group">
                <span class="input-group-text" id="basic-addon5">ðŸ“§</span>
                <input type="email" class="form-control" id="email" name="email" value="{{actor_editing.email}}"
                    required>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">{{#if action }}Save Changes{{else}}Create{{/if}}</button>
    </form>

    <hr class="my-5">

    <h2 class="mb-3">List of Actors</h2>
    <div class="table-responsive mb-5 mb-4">
        <table class="table table-striped table-hover mb-4">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Birth Date</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody class="text-black">
                {{#each actor}}
                <tr>
                    <td>{{this.first_name}}</td>
                    <td>{{this.last_name}}</td>
                    <td>{{this.birthDate}}</td>
                    <td>{{this.phoneNumber}}</td>
                    <td>{{this.email}}</td>
                    <td>
                        <div class="d-flex justify-content-evenly">
                            <form action="/actor/edit" method="post" class="me-2">
                                <input type="hidden" name="id" value="{{this.id}}">
                                <button type="submit" class="btn btn-sm btn-outline-info">Edit</button>
                            </form>
                            <form action="/actor/delete" method="post">
                                <input type="hidden" name="id" value="{{this.id}}">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Del</button>
                            </form>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>